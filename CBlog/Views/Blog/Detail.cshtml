<div role="main" class="container">
	<a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Back</a>
	<h1 class="my-3">@Model.Title</h1>
	<img class="blogDetailImg my-3" src="~/imgs/@Model.Image">

@model IEnumerable<Blog>
@*
	For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="mt-5">
	<ul class="nav nav-tabs">
		<li class="nav-item">
			<a class="nav-link refresh-partial-view @(ViewContext.RouteData.Values["Action"].ToString()=="Index" ? "active": "pinkText")" asp-controller="Home" asp-action="Index">All Blogs</a>
		</li>
		@if (User.Identity.IsAuthenticated)
		{
			<li class="nav-item">
				<a class="nav-link refresh-partial-view @(ViewContext.RouteData.Values["Action"].ToString()=="My_Blogs" ? "active": "pinkText")" asp-controller="Home" asp-action="My_Blogs">My Blogs</a>
			</li>
		}
	</ul>
</div>
<div class="row mt-5 text-start">
	@foreach (var blog in Model)
	{
		<div class="col-lg-4 md-6 sm-12 mb-3">
			<div class="card blogCard">
				<img class="card-img-top blogImg" src="~/imgs/@blog.Image">
				<div class="card-body">
					<p class="card-text blogDate">@blog.CreatedDate</p>
					<h5 class="card-title pinkText">@blog.Title</h5>
					<p class="card-text">@blog.Description</p>
					<a asp-controller="Blog" asp-action="Detail" asp-route-id=@blog.Id class="pinkText">READ MORE</a>
				</div>
			</div>
		</div>
	}
</div>

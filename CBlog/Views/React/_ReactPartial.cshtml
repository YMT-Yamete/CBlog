@using CBlog.Data.Enum
@using CBlog.ViewModels
@model BlogDetailViewModel
@*
	For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div>
	<button class="btn" data-action-url="@Url.Action("GiveReact", "React")" data-react="Like">
		<i class="bi bi-hand-thumbs-up-fill reactIcon"></i>
		<span class="reactCount"> @Model.Reacts!.Where(r => r.GivenReact == ReactType.Like).Count()</span>
	</button>
	<button class="btn" data-action-url="@Url.Action("GiveReact", "React")" data-react="Dislike">
		<i class="bi bi-hand-thumbs-down-fill reactIcon"></i>
		<span class="reactCount"> @Model.Reacts!.Where(r => r.GivenReact == ReactType.Dislike).Count()</span>
	</button>
</div>
